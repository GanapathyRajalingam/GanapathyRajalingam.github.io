<dom-module id="my-ironajax">
  <template>
    <!--<style include="shared-styles"></style> -->
    <style>
      :horizontal-section {
        display: block;
      }
            paper-button {
        width: 100%;
        margin: 10;
      }

      paper-button:hover {
        background-color: blue;
        color: white;
      }
    </style>


        <paper-toolbar>
            <div class="title flex-direction">Finacle Treasury - Web </div>
            <paper-icon-button icon="settings" on-tap="showList"></paper-icon-button>
        </paper-toolbar>

        <iron-ajax
            id="sendmsg"
            auto
            url="http://localhost:3000/api/loopbackTrial1s"
            params="{{param}}"
            handle-as="json"
            on-response="handleResponse"
            last-response="{{ajaxResponse}}"></iron-ajax>

        </iron-ajax>

        <template is="dom-repeat" items="[[ajaxResponse.items]]">
          <paper-material elevation="5">
          <div class="horizontal-section">
                    <p>[[item.name]]</p>
          </div>
        </paper-material>
        </template>

  </template>

  <script>
    (function() {
      'use strict';

      Polymer({
        is: 'my-ironajax',
        behaviors: [Polymer.NeonAnimatableBehavior],

        properties: {
          animationConfig: {
            value: function(){
              return {
                'entry': {
                  name: 'slide-from-left-animation',
                  node: this
                },
                'exit':{
                  name: 'fade-out-animation',
                  node: this
                }
              };
            }
          },

          param:{
            type: Object,
            value: function(){
              return {
                'name': 'GANA',
                'id':'1'
              };
            },
            notify: true,
          },
        },

        handleResponse: function(){
          console.log('Handled Response');

          return;
        },

        getData: function(){
        console.log('GetDats is called');
        return;
        },

      });
    })();
  </script>

</dom-module>
